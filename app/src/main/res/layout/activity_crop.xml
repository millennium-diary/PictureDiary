<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BDBDBD"
    tools:context=".CropActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/objectRecycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/constraintLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/completeBtn"
        tools:listitem="@layout/item_chosen_object"/>

    <android.widget.Button
        android:id="@+id/completeBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/playAll"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/objectRecycler"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintWidth_percent="0.2"
        android:text="완료"/>

    <android.widget.Button
        android:id="@+id/playAll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintTop_toBottomOf="@id/completeBtn"
        app:layout_constraintBottom_toTopOf="@id/constraintLayout"
        app:layout_constraintLeft_toRightOf="@id/objectRecycler"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHeight_percent="0.08"
        android:text="모두 재생"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/background_drawing_view_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/mo_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.example.picturediary.CropView
            android:id="@+id/crop_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#80FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TableLayout
        android:id="@+id/motionLinearLayout"
        android:columnCount="5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:background="#BDBDBD"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/constraintLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHeight_percent="0.15">
        <TableRow>
        <android.widget.Button
            android:id="@+id/Abtn_run"
            android:background="#F2A6C8"
            android:layout_margin="3dp"
            android:text="달리기"/>
        <android.widget.Button
            android:id="@+id/Abtn_jump"
            android:background="#F4B7D3"
            android:layout_margin="3dp"
            android:text="점프"/>
        <android.widget.Button
            android:id="@+id/Abtn_come"
            android:background="#F2A6C8"
            android:layout_margin="3dp"
            android:text="다가오기"/>
        <android.widget.Button
            android:id="@+id/Abtn_go"
            android:background="#F4B7D3"
            android:layout_margin="3dp"
            android:text="멀어지기"/>
        </TableRow>
        <TableRow>
        <android.widget.Button
            android:id="@+id/Abtn_shake"
            android:background="#F4B7D3"
            android:layout_margin="3dp"
            android:text="흔들"/>
        <android.widget.Button
            android:id="@+id/Abtn_fade"
            android:background="#F2A6C8"
            android:layout_margin="3dp"
            android:text="스르륵"/>
        <android.widget.Button
            android:id="@+id/Abtn_roll"
            android:background="#F4B7D3"
            android:layout_margin="3dp"
            android:text="데굴데굴"/>
        <android.widget.Button
            android:id="@+id/Abtn_spin"
            android:background="#F2A6C8"
            android:layout_margin="3dp"
            android:text="휘릭"/>

        </TableRow>
    </TableLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recommendRecycler"
        android:background="#BDBDBD"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/constraintLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintWidth_percent="1.0"
        tools:listitem="@layout/item_recommended_object"/>

    <ImageView
        android:id="@+id/temp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>